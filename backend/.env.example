# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/vaultstream

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Storage Configuration
# Options: 'local', 's3', 'r2'
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./uploads
TEMP_UPLOAD_PATH=./uploads/temp

# S3/R2 Configuration (only needed if STORAGE_TYPE is 's3' or 'r2')
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=
# S3_REGION=
# S3_ENDPOINT= (for R2 or S3-compatible services)

# Video Processing
HLS_SEGMENT_DURATION=4
VIDEO_ALLOWED_FORMATS=mp4,mov,avi,mkv,webm
MAX_VIDEO_SIZE_MB=500

# Security
SIGNED_URL_EXPIRY_SECONDS=3600
BCRYPT_SALT_ROUNDS=10
HMAC_SECRET=your-hmac-secret-for-signed-urls-change-this

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
