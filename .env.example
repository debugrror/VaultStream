# ===========================================
# VaultStream Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Application
# ===========================================
NODE_ENV=development
PORT=5000

# ===========================================
# Database
# ===========================================
# MongoDB connection string
# Development: mongodb://localhost:27017/vaultstream
# Production: mongodb://user:pass@host:port/vaultstream
MONGODB_URI=mongodb://localhost:27017/vaultstream

# ===========================================
# Authentication & Security
# ===========================================
# CRITICAL: Change these in production!
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CRITICAL: Used for signing HLS stream URLs
# Generate with: openssl rand -hex 32
HMAC_SECRET=your-super-secret-hmac-key-change-in-production

# Bcrypt salt rounds (10-12 recommended)
BCRYPT_SALT_ROUNDS=10

# ===========================================
# Storage Configuration
# ===========================================
# Options: 'local', 's3', 'r2'
STORAGE_TYPE=local

# Local storage path (relative or absolute)
STORAGE_LOCAL_PATH=./uploads

# S3/R2 Configuration (if STORAGE_TYPE=s3 or r2)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=vaultstream-videos

# ===========================================
# Video Processing
# ===========================================
# Maximum upload size in MB
VIDEO_MAX_SIZE_MB=500

# Allowed video formats (comma-separated)
VIDEO_ALLOWED_FORMATS=mp4,mov,avi,mkv,webm

# HLS segment duration in seconds
HLS_SEGMENT_DURATION=4

# ===========================================
# Signed URLs
# ===========================================
# Default expiry for signed URLs (seconds)
# 3600 = 1 hour
SIGNED_URL_EXPIRY=3600

# ===========================================
# CORS Configuration
# ===========================================
# Comma-separated list of allowed origins
# Development: http://localhost:3000
# Production: https://your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ===========================================
# Docker/Production (Optional)
# ===========================================
# MongoDB root credentials for Docker
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme-in-production

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Next.js public API URL
NEXT_PUBLIC_API_URL=http://localhost:5000
